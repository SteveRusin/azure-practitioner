{
  "name": "func-app",
  "version": "1.0.0",
  "description": "",
  "main": "{dist/src,src}/functions/*.js",
  "scripts": {
    "build": "tsc",
    "build-and-deploy": "./build-and-deploy",
    "copy-artifacts": "cp -R ./node_modules ./host.json ./package.json ./dist/",
    "clean": "rimraf dist",
    "build:clean": "npm run clean && npm run build",
    "start:dev": "npm run build:clean && concurrently --kill-others --raw \"npm run build:watch\" \"func start\"",
    "build:watch": "tsc && tsc -w",
    "db:seed": "ts-node -r tsconfig-paths/register -r ./scripts/source-env ./scripts/db-seed"
  },
  "dependencies": {
    "@azure/app-configuration": "^1.7.0",
    "@azure/cosmos": "^4.1.1",
    "@azure/functions": "^4.0.0",
    "@azure/identity": "^4.4.1",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.0.3",
    "@types/node": "18.x",
    "azure-functions-core-tools": "^4.x",
    "concurrently": "^9.0.1",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2",
    "zod": "^3.23.8"
  }
}
